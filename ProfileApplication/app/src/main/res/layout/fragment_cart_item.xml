<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_cart_item_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/fragment_cart_item_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/fragment_cart_text_linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/fragment_cart_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            app:srcCompat="@drawable/bt_ic_delete_forever" />

        <TextView
            android:id="@+id/fragment_cart_item_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="TextView" />

        <TextView
            android:id="@+id/fragment_cart_item_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="TextView"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>